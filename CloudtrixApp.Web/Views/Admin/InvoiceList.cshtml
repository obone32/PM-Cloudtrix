@model IEnumerable<CloudtrixApp.Core.DataModel.InvoiceModel>
@{
    ViewBag.Title = "InvoiceList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="wraper container-fluid">
    <div class="page-title">
        @if (ViewBag.IsAdd != null && ViewBag.IsAdd == true)
        {
            <a href="@Url.Action("Invoice", "Admin")" class="btn btn-primary pull-left">New Invoice </a>
            <br />
        }
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"> Invoice List </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table class="table table-hover table-bordered table-responsive" id="datatable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.InvoiceCode)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ProjectModel.ProjectName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PaymentMethod)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.GrandTotal)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>

                                        <th>action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.InvoiceCode)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ProjectModel.ProjectName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PaymentMethod)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.GrandTotal)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </td>

                                            <td>
                                                @if (ViewBag.IsAdd != null && ViewBag.IsAdd == true)
                                                {

                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-purple dropdown-toggle btn-xs" data-toggle="dropdown" aria-expanded="true">
                                                            action <span class="caret"></span>
                                                        </button>
                                                        <ul class="dropdown-menu" role="menu">
                                                            <li>
                                                                <a href="@Url.Action("EditInvoice", "Admin", new { InvoiceId = item.Id })"><i class="fa fa-edit"></i> Edit</a>
                                                            </li>
                                                            <li>
                                                                <a href="@Url.Action("DeletePurcahse", "Admin", new { InvoiceId = item.Id })" onclick="return confirm('Are you sure you want to Remove this Sale ?')"> <i class="fa fa-remove"></i> Delete</a>
                                                            </li>
                                                            <li>
                                                                <a href="@Url.Action("InvoiceInvoice", "Admin", new { InvoiceId = item.Id, style = 1 })"><i class="fa fa-print"></i> Invoice 1</a>
                                                            </li>
                                                            <li>
                                                                <a href="@Url.Action("InvoiceInvoice", "Admin", new { InvoiceId = item.Id, style = 2 })"><i class="fa fa-print"> </i> Invoice 2</a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                }

                                                @*<a href="@Url.Action("EditInvoice", "Admin", new {InvoiceId = item.Id})" class="btn btn-icon btn-warning btn-xs m-b-5">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("DeletePurcahse", "Admin", new {InvoiceId = item.Id})" onclick="return confirm('Are you sure you want to Remove this Invoice ?')" class="btn btn-icon btn-danger btn-xs m-b-5">
                                                        <i class="fa fa-remove"></i>
                                                    </a>*@
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {


        });

    </script>
}