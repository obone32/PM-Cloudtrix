@model CloudtrixApp.Core.DataModel.PaymentStatusModel
@{
    ViewBag.Title = "AddPaymentStatus";
}


<div class="wraper container-fluid">
    <div class="page-title">
        <h3 class="title">PaymentStatus </h3>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">New PaymentStatus</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("AddPaymentStatus", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(x => x.PaymentStatus)
                            @Html.TextBoxFor(x => x.PaymentStatus, null, new { @class = "form-control", @placeholder = "Enter PaymentStatus " })
                            @Html.ValidationMessageFor(x => x.PaymentStatus, "", new { @class = "text-danger" })
                        </div>
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>

                            @Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-default" })
                    }
                </div>
            </div>
        </div>

    </div>
</div>


