@model CloudtrixApp.Core.DataModel.TimeSheetModel
@{
    ViewBag.Title = "AddTimeSheet";
}
<link href="~/Content/adminFront/assets/plugins/timepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
<link href="~/Scripts/App/jquery.timepicker.min.css" rel="stylesheet" />
<div class="wraper container-fluid">
    <div class="page-title">
        <h3 class="title">Time Sheet </h3>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">New Time Sheet</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("AddTimeSheet", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(x => x.EmployeeId)
                            @Html.DropDownListFor(x => x.EmployeeId,
                                    new SelectList((IEnumerable<SelectListItem>)ViewBag.employee, "Value", "Text"), "Select Employee ",
                                    htmlAttributes: new { @class = "", id = "Employee" })
                            @Html.ValidationMessageFor(x => x.EmployeeId, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.ProjectId)
                            @Html.DropDownListFor(x => x.ProjectId,
                                    new SelectList((IEnumerable<SelectListItem>)ViewBag.project, "Value", "Text"), "Select Project ",
                                    htmlAttributes: new { @class = "", id = "Project" })
                            @Html.ValidationMessageFor(x => x.ProjectId, "", new { @class = "text-danger" })
                        </div>
                                <div class="form-group ">
                                    <label for="Date">Entry Date :</label>
                                    @Html.TextBox("EntryDate", null, new { @class = "form-control datepicker ", @style="width : 200px",@placeholder = "Select Entry Date ", autocomplete = "off" })
                                </div>
                                <div class="form-inline">

                                    <div class="form-group ">
                                        <label for="Time">Start Time :</label>
                                        @Html.TextBox("StartTime", null, new { @class = "form-control timepicker ", @placeholder = "Select Start Time ", autocomplete = "off" })
                                    </div>
                                    <div class="form-group">
                                        <label for="Time">          End Time : </label>
                                        @Html.TextBox("EndTime", null, new { @class = "form-control timepicker", @placeholder = "Select End Time ", autocomplete = "off" })
                                    </div>
                                </div>
                            <br />
                                <div class="form-group">
                                    <label for="WorkDetails"> Work Details: </label>
                                    @Html.TextArea("WorkDetails", new { @class = "form-control col-md-7", @rows = "2", @placeholder = "Enter Work Details" })
                                </div>
                                <br /><br /><br /><br /><br />
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">
                                        Submit
                                    </button>
                                    @Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-default" })
                                </div>

                    }
                </div>
            </div>
        </div>

    </div>
</div>
@section scripts {
    <script src="~/Content/adminFront/assets/plugins/timepicker/bootstrap-datepicker.js"></script>
    @Scripts.Render("~/bundles/App3")

    <script type="text/javascript">

    </script>
}


