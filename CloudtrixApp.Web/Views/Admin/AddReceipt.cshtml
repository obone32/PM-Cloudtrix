@model CloudtrixApp.Core.DataModel.ReceiptModel
@{
    ViewBag.Title = "AddReceipt";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker3.css" rel="stylesheet" />
<link href="~/Content/adminFront/assets/plugins/timepicker/bootstrap-datepicker.min.css" rel="stylesheet" />

<div class="wraper container-fluid">
    <div class="page-title">
        <h3 class="title">Receipt </h3>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">New Receipt</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("AddReceipt", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="form-inline">
                                <div class="form-group col-md-3">
                                    @Html.LabelFor(x => x.ReceiptNumber)
                                    @Html.TextBoxFor(x => x.ReceiptNumber, null, new { @class = "form-control", @placeholder = "Enter Receipt Name " })
                                    @Html.ValidationMessageFor(x => x.ReceiptNumber, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="Date">Receipt Date :</label>
                                    @Html.TextBox("ReceiptDate", null, new { @class = "form-control datepicker ",@style ="width:200px", @placeholder = "Select Receipt Date ", autocomplete = "off" })
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="form-inline">
                                <div class="form-group col-md-3">
                                    @Html.LabelFor(x => x.CustomerId)
                                    @Html.DropDownListFor(x => x.CustomerId,
                                    new SelectList((IEnumerable<SelectListItem>)ViewBag.customer, "Value", "Text"), "Select Customer",
                                    htmlAttributes: new { @class = "", id = "Customer" })
                                    @Html.ValidationMessageFor(x => x.CustomerId, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-md-3">
                                    @Html.LabelFor(x => x.ProjectId)
                                    @Html.DropDownListFor(x => x.ProjectId,
                                    new SelectList((IEnumerable<SelectListItem>)ViewBag.project, "Value", "Text"), "Select Project",
                                    htmlAttributes: new { @class = "", id = "Project" })
                                    @Html.ValidationMessageFor(x => x.ProjectId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <br/>
                            <div class="row">
                                <div class="form-inline">
                                    <div class="form-group col-md-3">
                                        @Html.LabelFor(x => x.Amount)
                                        @Html.TextBoxFor(x => x.Amount, null, new { @class = "form-control", @placeholder = "Amount" })
                                        @Html.ValidationMessageFor(x => x.Amount, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group col-md-3">
                                        @Html.LabelFor(x => x.Status)
                                        @Html.TextBoxFor(x => x.Status, null, new { @class = "form-control", @rows = "5", @placeholder = "Status" })
                                        @Html.ValidationMessageFor(x => x.Status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                                <br />
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">
                                        Submit
                                    </button>
                                    @Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-default" })
                                </div>

                    }
                </div>
            </div>
        </div>

    </div>
</div>
@section scripts {
    <script src="~/Content/adminFront/assets/plugins/timepicker/bootstrap-datepicker.js"></script>
    @Scripts.Render("~/bundles/App3")

    <script type="text/javascript">

    </script>
}


