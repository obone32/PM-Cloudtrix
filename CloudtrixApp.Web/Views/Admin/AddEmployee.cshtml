@model CloudtrixApp.Core.DataModel.EmployeeModel
@{
    ViewBag.Title = "AddEmployee";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker3.css" rel="stylesheet" />
<link href="~/Content/adminFront/assets/plugins/timepicker/bootstrap-datepicker.min.css" rel="stylesheet" />

<div class="wraper container-fluid">
    <div class="page-title">
        <h3 class="title">Employee </h3>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">New Employee</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("AddEmployee", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="EmployeeName">Name of Employee :</label>
                            @Html.TextBoxFor(x => x.EmployeeName, null, new { @class = "form-control", @placeholder = "Enter Employee Name " })
                            @Html.ValidationMessageFor(x => x.EmployeeName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Address">Address :</label>
                            @Html.TextBoxFor(x => x.EmployeeAddress, null, new { @class = "form-control", @placeholder = "Please Enter Address" })
                            @Html.ValidationMessageFor(x => x.EmployeeAddress, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Email">Email :</label>
                            @Html.TextBoxFor(x => x.EmployeeEmail, null, new { @class = "form-control", @style = "width:300px", @placeholder = "Please Enter Email" })
                            @Html.ValidationMessageFor(x => x.EmployeeEmail, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-3">
                            <label for="Phone">Phone :</label>
                            @Html.TextBoxFor(x => x.EmployeePhone, null, new { @class = "form-control", @style = "width:150px", @placeholder = "Enter Phone" })
                            @Html.ValidationMessageFor(x => x.EmployeePhone, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-3">
                            <label for="Gender">Gender :</label>
                            @Html.TextBoxFor(x => x.EmployeeGender, null, new { @class = "form-control ", @style = "width:120px", @placeholder = "Enter Gender" })
                            @Html.ValidationMessageFor(x => x.EmployeeGender, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-3">
                            <label for="Date">Date of Birth :</label>
                            @Html.TextBoxFor(x => x.EmployeeDOB, null, new { @class = "form-control datepicker", @style = "width:150px", @placeholder = " Enter DOB" })
                            @Html.ValidationMessageFor(x => x.EmployeeDOB, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-3">
                            <label for="Date">Date of Joining :</label>
                            @Html.TextBoxFor(x => x.EmployeeDOJ, null, new { @class = "form-control datepicker", @style = "width:150px", @placeholder = "Enter DOJ" })
                            @Html.ValidationMessageFor(x => x.EmployeeDOJ, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Salary">Salary of Employee :</label>
                            @Html.TextBoxFor(x => x.EmployeeSalary, null, new { @class = "form-control", @style = "width:150px", @placeholder = "Please Enter Salary" })
                            @Html.ValidationMessageFor(x => x.EmployeeSalary, "", new { @class = "text-danger" })
                        </div>

                                <button type="submit" class="btn btn-primary">
                                    Submit
                                </button>

                                @Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-default" })
                    }
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts {
    <script src="~/Content/adminFront/assets/plugins/timepicker/bootstrap-datepicker.js"></script>
    @Scripts.Render("~/bundles/App3")

    <script type="text/javascript">

    </script>
}




