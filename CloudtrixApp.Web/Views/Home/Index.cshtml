
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>CloudTRIX - Project Management system</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/Landing/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom fonts for this template -->
    <link href="~/Content/Landing/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Landing/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template -->
    <link href="~/Content/Landing/css/landing-page.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-light bg-light static-top">
        <div class="container">
            <a class="navbar-brand" href="#">CloudTRIX</a>

           <div class="navbar-brand pull-right">
               <a class="btn btn-primary pull-right" href="@Url.Action("Login")">Sign In</a>
           </div>

        </div>
    </nav>
    <!-- Masthead -->
    <header class="masthead text-white text-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">Check your business just looking at a glance of CloudTRIX Dashboard </h1>
                </div>
                
            </div>
        </div>
    </header>
    <!-- Icons Grid -->
   
    <!-- Image Showcases -->
    <section class="showcase">
        <div class="container-fluid p-0">
            <div class="row no-gutters">
                <div class="col-lg-6  text-white showcase-img" style="background-image: url('/Content/Landing/img/Purchase.jpg');"></div>
                <div class="col-lg-6  my-auto showcase-text">
                    <h2>Manage Purchase</h2>
                    <p class="lead mb-0">Get Your product from suppiler and stock it and manage through Purchase (insert, Update, Delete) and then print your purchase invoice</p>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-lg-6 text-white showcase-img" style="background-image: url('/Content/Landing/img/Sales.jpg');"></div>
                <div class="col-lg-6 my-auto showcase-text">
                    <h2>Manage Sales</h2>
                    <p class="lead mb-0">Sale your product to the customer and track in from stock out and manage through Sales(insert, update, Delete) and then print sales invoice for your customer </p>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-lg-6 text-white showcase-img" style="background-image: url('/Content/Landing/img/Report.jpg');"></div>
                <div class="col-lg-6 my-auto showcase-text">
                    <h2>Reports </h2>
                    <p class="lead mb-0">Sale and Purchase reports are nicely designed in two templates.</p>
                </div>
            </div>
        </div>
    </section>
    <!-- Testimonials -->
    
    <!-- Call to Action -->
    
    <!-- Footer -->
    <footer class="footer bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
                    <ul class="list-inline mb-2">
                        <li class="list-inline-item">
                            <a target="_blank" href="http://">About</a>
                        </li>
                        <li class="list-inline-item">&sdot;</li>
                        <li class="list-inline-item">
                            <a target="_blank" href="http://">Contact</a>
                        </li>
                        <li class="list-inline-item">&sdot;</li>
                        
                        
                    </ul>
                    <p class="text-muted small mb-4 mb-lg-0">&copy; CloudTRIX   @DateTime.Now.Year  . All Rights Reserved.</p>
                </div>
                <div class="col-lg-6 h-100 text-center text-lg-right my-auto">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item mr-3">
                            <a target="_blank" href="http://">
                                <i class="fa fa-facebook fa-2x fa-fw"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/Landing/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Landing/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
