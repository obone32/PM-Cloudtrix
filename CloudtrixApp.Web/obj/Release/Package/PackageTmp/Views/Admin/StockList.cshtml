@model IEnumerable<PharmaApp.Core.DataModel.StockModel>
@{
    ViewBag.Title = "Stock List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wraper container-fluid">
    <div class="page-title">
        <a href="@Url.Action("Purchase", "Admin")" class="btn btn-primary pull-left">Made New Purchase </a>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"> Stock List </h3>

                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table class="table table-hover table-bordered" id="datatable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MedicineModel.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MedicineModel.BatchNo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TotalQuantity)
                                        </th>
                                      
                                        <th>
                                            @Html.DisplayNameFor(model => model.MedicineModel.SellingPrice)
                                        </th>
                                        <th>
                                           @Html.DisplayNameFor(model => model.MedicineModel.BuyingPrice)
                                        </th>

                                   
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MedicineModel.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MedicineModel.BatchNo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalQuantity)
                                            </td>
                                            
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MedicineModel.SellingPrice)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MedicineModel.BuyingPrice)
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

