@model PharmaApp.Core.DataModel.MedicineModel
@{
    ViewBag.Title = "AddMedicine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wraper container-fluid">
    <div class="page-title">
        <h3 class="title">Medicine </h3>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">New Medicine</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("AddMedicine", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()


                        <div class="form-group">
                            @Html.LabelFor(x => x.CategoryId)
                            @Html.DropDownListFor(x => x.CategoryId,
                                    new SelectList((IEnumerable<SelectListItem>)ViewBag.categories, "Value", "Text"), "Select Category",
                                    htmlAttributes: new { @class = "form-control", id = "CategoryId" })
                            @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.ShelfId)
                            @Html.DropDownListFor(x => x.ShelfId,
                                    new SelectList((IEnumerable<SelectListItem>)ViewBag.shelfs, "Value", "Text"), "Select Slelf",
                                    htmlAttributes: new { @class = "form-control", id = "shelfId" })
                            @Html.ValidationMessageFor(x => x.ShelfId, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Name)
                            @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control", @placeholder = "Enter Name " })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.BatchNo)
                            @Html.TextBoxFor(x => x.BatchNo, null, new { @class = "form-control", @placeholder = "Enter Batch No " })
                            @Html.ValidationMessageFor(x => x.BatchNo, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.BuyingPrice)
                            @Html.TextBoxFor(x => x.BuyingPrice, null, new { @class = "form-control", @placeholder = "Enter Buying Price " })
                            @Html.ValidationMessageFor(x => x.BuyingPrice, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.SellingPrice)
                            @Html.TextBoxFor(x => x.SellingPrice, new { @class = "form-control", @rows = "3", @placeholder = "Enter Selling Price" })
                            @Html.ValidationMessageFor(x => x.SellingPrice, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-purple">
                            Submit
                        </button>
                    }
                </div>
            </div>
        </div>

    </div>
</div>